---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} windowTitle="blog.md">
    <div class="post-header">
        <h1 transition:name={frontmatter.title}>{frontmatter.title}</h1>
        <span class="publishingDate">
            Lagt ut {
                (frontmatter.pubDate as Date).toLocaleDateString("nb", {
                    day: "2-digit",
                    month: "long",
                    year: "numeric",
                })
            }
        </span>
    </div>

    <article class="post-content">
        <slot />
    </article>
</BaseLayout>

<style>
    .post-header {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .post-header h1 {
        font-size: clamp(2.05rem, 6.8vw, 3.2rem);
        line-height: 1.02;
        text-shadow:
            1px 1px 0 color-mix(in oklch, var(--saffron) 72%, white),
            2px 2px 0 color-mix(in oklch, var(--accent) 10%, transparent);
    }

    .publishingDate {
        display: inline-flex;
        font-family: var(--font-mono);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-size: 0.7rem;
        color: var(--accent-secondary);
        margin-bottom: 1rem;
    }

    .post-content {
        max-width: 66ch;
        font-size: 1.06rem;
        line-height: 1.78;
    }

    .post-content :global(p + p) {
        margin-top: 1rem;
    }

    .post-content :global(h2),
    .post-content :global(h3),
    .post-content :global(h4) {
        margin-top: 2rem;
        margin-bottom: 0.75rem;
        text-transform: none;
        letter-spacing: 0.01em;
    }

    .post-content :global(h2) {
        font-family: var(--font-ui);
        font-size: clamp(1.45rem, 3.2vw, 1.85rem);
    }

    .post-content :global(h3) {
        font-family: var(--font-ui);
        font-size: clamp(1.2rem, 2.5vw, 1.45rem);
    }

    .post-content :global(ul),
    .post-content :global(ol) {
        margin: 0.8rem 0 1rem 1.2rem;
        padding: 0;
    }

    .post-content :global(li + li) {
        margin-top: 0.35rem;
    }

    .post-content :global(pre) {
        margin: 1rem 0;
    }

    .post-content :global(blockquote) {
        margin: 1.1rem 0;
    }

    @media (max-width: 760px) {
        .post-content {
            font-size: 1rem;
            line-height: 1.72;
        }
    }
</style>
